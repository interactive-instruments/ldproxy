{{> header}}

<div>
    <h1>{{title}}</h1>
    <span>{{{description}}}</span>
    <br/>
    <br/>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{title}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#resources}}
                    <li>{{#link}}<a href="{{href}}">{{title}}</a>{{/link}}</li>
                {{/resources}}
                {{^resources}}
                    <li>{{none}}</li>
                {{/resources}}
            </ul>
        </div>
    </div>
</div>

{{> footer}}

