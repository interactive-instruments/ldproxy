{{> header}}

<div>
    <h1>{{title}}</h1>
    <span>{{{description}}}</span>
    <br/>
    <br/>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{title}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#styles}}
                    <li>
                        {{#title}}{{.}} ({{id}}){{/title}}{{^title}}{{id}}{{/title}}
                        <ul>
                            {{#links}}
                                <li class="list-unstyled"><a href="{{href}}">{{title}}</a></li>
                            {{/links}}
                            {{#sections}}
                                {{#mapboxStyleUrl}}
                                <li class="list-unstyled"><div id="map-container-{{styleId}}" class="map"></div></li>
                                {{/mapboxStyleUrl}}
                            {{/sections}}
                        </ul>
                        <br/>
                    </li>
                {{/styles}}
                {{^styles}}
                    <li>{{none}}</li>
                {{/styles}}
                <script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.1.1/build/ol.js"></script>
                <script src="https://cdn.jsdelivr.net/gh/openlayers/ol-mapbox-style@v4.3.1/dist/olms.js"></script>
            </ul>
        </div>
    </div>
</div>
{{> script}}

{{> footer}}

