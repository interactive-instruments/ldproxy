<nav>
    <ul class="pagination mb-4">
        {{#pagination}}
            {{#url}}
                <li class="page-item"><a class="page-link" href="{{path}}{{#queryWithout}}offset,limit{{/queryWithout}}{{.}}">{{label}}</a></li>
            {{/url}}
            {{^url}}
                {{#active}}
                    <li class="page-item active"><a class="page-link" href="">{{label}}</a></li>
                {{/active}}
                {{^active}}
                    <li class="page-item disabled"><a class="page-link" href="">{{label}}</a></li>
                {{/active}}
            {{/url}}
        {{/pagination}}
    </ul>
</nav>
