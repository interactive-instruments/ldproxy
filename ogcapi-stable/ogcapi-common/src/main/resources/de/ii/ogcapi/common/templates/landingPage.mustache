{{> header}}

<div>
    <h1>{{title}}</h1>
    <div>{{{description}}}</div>
    <br/>
    <h2>{{mainLinksTitle}}</h2>

    {{#data}}
    <div class="row my-1">
        <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
    </div>
    {{/data}}
    {{#queries}}
      <div class="row my-1">
        <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
      </div>
    {{/queries}}
    {{#map}}
        <div class="row my-1">
            <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
        </div>
    {{/map}}
    {{#tiles}}
    <div class="row my-1">
        <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
    </div>
    {{/tiles}}
    {{#tiles3d}}
      <div class="row my-1">
        <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
      </div>
    {{/tiles3d}}
    {{#styles}}
    <div class="row my-1">
        <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
    </div>
    {{/styles}}
    {{#routes}}
    <div class="row my-1">
        <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
    </div>
    {{/routes}}
    <br/>

    <h2>{{apiInformationTitle}}</h2>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{apiDocumentationTitle}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#apiDefinition}}
                    <li>
                        <a href="{{href}}" target="_blank">{{title}}</a>
                    </li>
                {{/apiDefinition}}
                {{#apiDocumentation}}
                    <li>
                        <a href="{{href}}" target="_blank">{{title}}</a>
                    </li>
                {{/apiDocumentation}}
                {{^apiDefinition}}
                    {{^apiDocumentation}}
                        <li>{{none}}</li>
                    {{/apiDocumentation}}
                {{/apiDefinition}}
            </ul>
        </div>
    </div>

    {{#externalDocs}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{externalDocsTitle}}</div>
            <div class="col-md-10">
                <span><a href="{{url}}">{{#description}}{{{.}}}{{/description}}{{^description}}{{url}}{{/description}}</a></span>
            </div>
        </div>
    {{/externalDocs}}

    {{#metadata}}
    {{#contactInfo}}
    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{providerTitle}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#contactName}}
                    <li>{{{.}}}</li>
                {{/contactName}}
                {{#contactUrl}}
                    <li><a href="{{.}}" target="_blank">{{.}}</a></li>
                {{/contactUrl}}
                {{#contactEmail}}
                    <li>{{.}}</li>
                {{/contactEmail}}
                {{#contactPhone}}
                    <li>{{.}}</li>
                {{/contactPhone}}
            </ul>
        </div>
    </div>
    {{/contactInfo}}
    {{#licenseName}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{licenseTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>{{{.}}}</li>
                    {{#licenseUrl}}
                    <li><a href="{{.}}">{{.}}</a></li>
                    {{/licenseUrl}}
                </ul>
            </div>
        </div>
    {{/licenseName}}
    {{^licenseName}}
        {{#licenseUrl}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{licenseTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li><a href="{{.}}">{{.}}</a></li>
                </ul>
            </div>
        </div>
        {{/licenseUrl}}
    {{/licenseName}}
    {{#attribution}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{attributionTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>{{{.}}}</li>
                </ul>
            </div>
        </div>
    {{/attribution}}
    {{/metadata}}

    {{#bbox}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{spatialExtentTitle}}</div>
            {{^hideMap}}
                <div class="col-md-10">
                    <div id="map" class="map-sm"></div>
                </div>
            {{/hideMap}}
            {{#hideMap}}
                <div class="col-md-10">
                    <ul class="list-unstyled">
                        <li>
                            [ [ {{minLon}}, {{minLat}} ], [ {{maxLon}}, {{maxLat}} ] ]
                        </li>
                    </ul>
                </div>
            {{/hideMap}}
        </div>
    {{/bbox}}

    {{#temporalCoverageHtml}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{temporalExtentTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <span id="timeInterval">{{.}}</span>
                    </li>
                </ul>
            </div>
        </div>
    {{/temporalCoverageHtml}}

    <h2>{{expertInformationTitle}}</h2>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{additionalLinksTitle}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#links}}
                    <li>
                        <a href="{{href}}">{{title}}</a>
                    </li>
                {{/links}}
                {{^links}}
                    <li>{{none}}</li>
                {{/links}}
            </ul>
        </div>
    </div>

    {{#orderedSections}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{title}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    {{#links}}
                        <li>
                            <a href="{{url}}" {{#target}}target="{{.}}"{{/target}}>{{title}}</a>
                        </li>
                    {{/links}}
                    {{^links}}
                        <li>{{none}}</li>
                    {{/links}}
                </ul>
            </div>
        </div>
    {{/orderedSections}}

    {{#dataSourceUrl}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{dataSourceTitle}}</div>
            <div class="col-md-10">
                <a href="{{.}}" target="_blank">{{.}}</a>
            </div>
        </div>
    {{/dataSourceUrl}}

</div>


{{> app-common}}

{{^hideMap}}
  {{> mapClient}}
{{/hideMap}}

{{> footer}}
