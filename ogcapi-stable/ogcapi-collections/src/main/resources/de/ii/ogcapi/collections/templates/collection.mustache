{{> header}}

<div>
    <h1>{{title}}</h1>
    <div class="row my-1">
        <div class="col-md-12">{{{description}}}</div>
    </div>
    <br/>

    <h2>{{mainLinksTitle}}</h2>

    {{#items}}
        <div class="row my-1">
            <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
        </div>
    {{/items}}
    {{#map}}
        <div class="row my-1">
            <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
        </div>
    {{/map}}
    {{#tiles}}
        <div class="row my-1">
            <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
        </div>
    {{/tiles}}
    {{#styles}}
        <div class="row my-1">
            <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
        </div>
    {{/styles}}
    {{#dapa}}
        <div class="row my-1">
            <div class="col-md-12  text-truncate"><big><a href="{{href}}">{{title}}</a></big></div>
        </div>
    {{/dapa}}
    <br/>

    <h2>{{collectionInformationTitle}}</h2>

    {{#itemCount}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{itemCountTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <span id="itemCount">{{.}}</span>
                    </li>
                </ul>
            </div>
        </div>
    {{/itemCount}}

    {{#bbox}}
    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{spatialExtentTitle}}</div>
        {{^hideMap}}
            <div class="col-md-10">
                <div id="map" class="map-sm"></div>
            </div>
        {{/hideMap}}
        {{#hideMap}}
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        [ [ {{minLon}}, {{minLat}} ], [ {{maxLon}}, {{maxLat}} ] ]
                    </li>
                </ul>
            </div>
        {{/hideMap}}
    </div>
    {{/bbox}}

    {{#temporalCoverageHtml}}
    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{temporalExtentTitle}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                <li>
                    <span id="timeInterval">{{.}}</span>
                </li>
            </ul>
        </div>
    </div>
    {{/temporalCoverageHtml}}

    {{#hasLicense}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{licenseTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    {{#licenseLinks}}
                        <li>
                            <a href="{{href}}">{{title}}</a>
                        </li>
                    {{/licenseLinks}}
                    {{^licenseLinks}}
                        <li>{{none}}</li>
                    {{/licenseLinks}}
                </ul>
            </div>
        </div>
    {{/hasLicense}}

    {{#hasDownload}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{downloadTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    {{#downloadLinks}}
                        <li>
                            <a href="{{href}}">{{title}}</a>
                        </li>
                    {{/downloadLinks}}
                    {{^downloadLinks}}
                        <li>{{none}}</li>
                    {{/downloadLinks}}
                </ul>
            </div>
        </div>
    {{/hasDownload}}

    {{#hasMetadata}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{metadataTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    {{#metadataLinks}}
                        <li>
                            <a href="{{href}}">{{title}}</a>
                        </li>
                    {{/metadataLinks}}
                    {{^metadataLinks}}
                        <li>{{none}}</li>
                    {{/metadataLinks}}
                </ul>
            </div>
        </div>
    {{/hasMetadata}}

    {{#withStyleInfos}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{styleInfosTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    {{#styles}}
                        <li>
                            {{#title}}{{.}} ({{id}}){{/title}}{{^title}}{{id}}{{/title}}
                            <ul>
                                {{#links}}
                                    <li class="list-unstyled"><a href="{{href}}">{{title}}</a></li>
                                {{/links}}
                            </ul>
                            <br/>
                        </li>
                    {{/styles}}
                    {{^styles}}
                        <li>{{none}}</li>
                    {{/styles}}
                </ul>
            </div>
        </div>

    {{#defaultStyle}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{defaultStyleTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>{{.}}</li>
                </ul>
            </div>
        </div>
    {{/defaultStyle}}
    {{/withStyleInfos}}

    <h2>{{expertInformationTitle}}</h2>

    {{#hasGeometry}}
    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{supportedCrsTitle}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#crs}}
                <li>
                    <a href="{{.}}">{{.}}</a>
                </li>
                {{/crs}}
                {{^crs}}
                <li>
                    <a href="http://www.opengis.net/def/crs/OGC/1.3/CRS84">http://www.opengis.net/def/crs/OGC/1.3/CRS84</a>
                </li>
                {{/crs}}
            </ul>
        </div>
    </div>

    {{#storageCrs}}
        <div class="row my-3">
            <div class="col-md-2 font-weight-bold">{{storageCrsTitle}}</div>
            <div class="col-md-10">
                <ul class="list-unstyled">
                    <li>
                        <a href="{{.}}">{{.}}</a>
                    </li>
                </ul>
            </div>
        </div>
    {{/storageCrs}}
    {{/hasGeometry}}

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{additionalLinksTitle}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#links}}
                    <li>
                        <a href="{{href}}">{{title}}</a>
                    </li>
                {{/links}}
                {{^links}}
                    <li>{{none}}</li>
                {{/links}}
            </ul>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-md-2 font-weight-bold">{{itemTypeTitle}}</div>
        <div class="col-md-10">
            <ul class="list-unstyled">
                {{#itemType}}
                    <li>
                        {{.}}
                    </li>
                {{/itemType}}
                {{^itemType}}
                    <li>
                        feature
                    </li>
                {{/itemType}}
            </ul>
        </div>
    </div>

</div>

{{> app-common}}

{{^hideMap}}
  {{> mapClient}}
{{/hideMap}}

{{> footer}}
