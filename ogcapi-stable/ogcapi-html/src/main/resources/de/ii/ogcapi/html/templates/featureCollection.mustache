{{> header}}

<div>
    <h1>{{title}}</h1>
    <span>{{{description}}}</span>
    <br/>
    <br/>
</div>

{{#filterEditor}}
<div id="filter" class="mb-5">
<div class="row mb-3">
<div class="col-md-3 font-weight-bold py-1">
Filter
</div>
</div>
</div>
{{/filterEditor}}

{{#isMapRight}}
    <div class="row">
        <div class="col-md-6">

            {{> pagination}}

            <ul class="list-unstyled">
                {{#features}}
                    <li>
                        {{> feature}}
                    </li>
                {{/features}}
            </ul>

            {{> pagination}}

        </div>
        {{^hideMap}}
            <div class="col-md-6">
                <div id="map" class="map-sm"></div>
            </div>
        {{/hideMap}}
    </div>
{{/isMapRight}}

{{#isMapTop}}
    {{^hideMap}}
        <div class="row">
            <div class="col-md-12">
                {{> pagination}}
            </div>
        </div>
        <div class="row my-2">
            <div class="col-md-12">
                <div id="map" class="map-sm"></div>
            </div>
        </div>
        <br/>
    {{/hideMap}}

    <div class="row">
        <div class="col-md-12">

            {{> pagination}}

            <ul class="list-unstyled">
                {{#features}}
                    <li>
                        {{> feature}}
                    </li>
                {{/features}}
            </ul>

            {{> pagination}}

        </div>
    </div>
{{/isMapTop}}

